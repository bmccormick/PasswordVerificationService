<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC
	"-//SPRING//DTD Bean//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">
<!-- app -->
<beans>	
	<bean id="passwordVerificationService"
		class="com.mccormi.service.password.PasswordVerificationService">
		<property name="rules">
			<list>
				<ref bean="lengthCheckPasswordRule" />
				<ref bean="mixedCasePasswordRule" />
				<ref bean="sequenceCheckPasswordRule" />	
			</list>			
		</property>
	</bean>
	
	<bean id="lengthCheckPasswordRule"
		class="com.mccormi.service.password.rule.LengthCheckPasswordRule">		
		<property name="minLength">
			<value>5</value>
		</property>
		<property name="maxLength">
			<value>12</value>
		</property>
	</bean>
	
	<bean id="mixedCasePasswordRule"
		class="com.mccormi.service.password.rule.MixedCasePasswordRule">		
		
	</bean>
	
	<bean id="sequenceCheckPasswordRule"
		class="com.mccormi.service.password.rule.SequenceCheckPasswordRule">		
		
	</bean>
	
</beans>